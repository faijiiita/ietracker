generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model UserSettings {
  userId   String @id
  currency String
  timezone String
}

model Category {
  userId    String
  name      String
  icon      String
  type      String   @default("income")
  createdAt DateTime @default(now())

  @@unique([userId, name, type])
}

model Transaction {
  id           String   @id @default(uuid())
  userId       String
  description  String
  date         DateTime
  userTimezone String
  type         String   @default("income")
  category     String
  categoryIcon String
  amount       Float
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
}

model MonthHistory {
  userId  String
  day     Int
  month   Int
  year    Int
  income  Float
  expense Float

  @@id([userId, day, month, year])
}

model YearHistory {
  userId  String
  month   Int
  year    Int
  income  Float
  expense Float

  @@id([userId, month, year])
}
